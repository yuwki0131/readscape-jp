# ReadScape-JP 環境変数テンプレート
# このファイルを .env にコピーして、各値を環境に応じて設定してください

# =========================================
# Application Configuration
# =========================================
APP_NAME=readscape-consumer-api
SPRING_PROFILES_ACTIVE=docker
SERVER_PORT=8080

# =========================================
# Database Configuration
# =========================================
DB_HOST=postgres
DB_PORT=5432
DB_NAME=readscape
DB_USER=readscape_user
DB_PASSWORD=readscape_pass
DB_POOL_SIZE=20
DB_POOL_MIN_IDLE=5

# =========================================
# JWT Configuration
# =========================================
# 本番環境では必ず256bit以上のランダムな文字列に変更してください
JWT_SECRET=your-very-secure-jwt-secret-key-256-bits-long-change-in-production
JWT_EXPIRATION=3600000
JWT_REFRESH_EXPIRATION=2592000000

# =========================================
# Redis Configuration
# =========================================
REDIS_ENABLED=true
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DATABASE=0
REDIS_SSL=false

# =========================================
# SSL/HTTPS Configuration (本番環境)
# =========================================
SSL_ENABLED=false
SSL_KEY_STORE_PATH=/etc/ssl/certs/readscape.p12
SSL_KEY_STORE_PASSWORD=your-ssl-keystore-password

# =========================================
# Monitoring Configuration
# =========================================
PROMETHEUS_ENABLED=true
LOG_LEVEL=INFO
API_DOCS_ENABLED=true
SWAGGER_UI_ENABLED=true

# =========================================
# Consumer API Specific
# =========================================
CONSUMER_API_NAME=readscape-consumer-api
CONSUMER_SERVER_PORT=8080

# =========================================
# Inventory Management API Specific
# =========================================
INVENTORY_API_NAME=readscape-inventory-api
INVENTORY_SERVER_PORT=8081

# =========================================
# pgAdmin Configuration
# =========================================
PGADMIN_DEFAULT_EMAIL=admin@readscape.jp
PGADMIN_DEFAULT_PASSWORD=admin123
PGADMIN_CONFIG_SERVER_MODE=False

# =========================================
# External Services (将来の実装用)
# =========================================
# メール送信サービス
MAIL_HOST=smtp.example.com
MAIL_PORT=587
MAIL_USERNAME=
MAIL_PASSWORD=
MAIL_FROM=noreply@readscape.jp

# 支払いサービス
PAYMENT_API_KEY=
PAYMENT_SECRET_KEY=
PAYMENT_WEBHOOK_ENDPOINT=

# ファイルストレージ
S3_BUCKET_NAME=
S3_ACCESS_KEY=
S3_SECRET_KEY=
S3_REGION=ap-northeast-1

# =========================================
# Security Configuration (本番環境)
# =========================================
# CORS設定
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8080

# レート制限
RATE_LIMIT_ANONYMOUS=100
RATE_LIMIT_AUTHENTICATED=1000
RATE_LIMIT_WINDOW=3600

# セッション設定
SESSION_TIMEOUT=1800